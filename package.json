{
  "name": "@indexed-finance/governance",
  "version": "1.0.0",
  "description": "Governance and distribution contracts for the Indexed protocol",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/indexed-finance/governance"
  },
  "files": [
    "contracts/distribution",
    "contracts/governance",
    "artifacts",
    "deployments/rinkeby",
    "deployments/mainnet"
  ],
  "scripts": {
    "clean:temp": "buidler-verify-helper --clean",
    "clean:build": "rimraf ./artifacts && rimraf ./cache && npm run clean:temp",
    "prepare-build": "npm run clean:build && buidler-verify-helper --prepare",
    "prepare:ndx": "yarn prepare-build --contracts Ndx",
    "prepare:governor": "yarn prepare-build --contracts GovernorAlpha",
    "prepare:timelock": "yarn prepare-build --contracts Timelock",
    "deploy:rinkeby": "buidler --network rinkeby deploy",
    "deploy:mainnet": "buidler --network mainnet deploy",
    "deploy:ndx": "yarn prepare:ndx && yarn deploy:mainnet --tags Ndx",
    "deploy:governor": "yarn prepare:governor && yarn deploy:mainnet --tags GovernorAlpha",
    "deploy:timelock": "yarn prepare:timelock && yarn deploy:mainnet --tags Timelock",
    "build": "yarn clean:build && buidler compile",
    "coverage": "buidler coverage --network coverage --solcoverjs ./.solcover.js",

    "test": "buidler test",
    "prepublish": "yarn build && node ./scripts/purge-periphery-artifacts"
  },
  "dependencies": {
    "@indexed-finance/indexed-core": "^1.0.0",
    "@indexed-finance/proxies": "^1.0.15",
    "@indexed-finance/uniswap-deployments": "^1.0.2",
    "@openzeppelin/contracts": "^3.2.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0"
  },
  "devDependencies": {
    "@ethersproject/providers": "^5.0.9",
    "@nomiclabs/buidler": "^1.4.3",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^2.1.0",
    "@nomiclabs/buidler-waffle": "^2.1.0",
    "buidler-deploy": "^0.6.0-beta.16",
    "buidler-ethers-v5": "^0.2.3",
    "buidler-gas-reporter": "^0.1.3",
    "buidler-verify-helper": "^1.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "cli-table3": "^0.6.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-wallet": "^0.6.5",
    "ethers": "^5.0.8",
    "mocha": "^8.1.3",
    "moment": "^2.29.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.55",
    "solidity-coverage": "^0.7.10",
    "solium": "^1.2.5",
    "solium-plugin-security": "^0.1.1"
  }
}
